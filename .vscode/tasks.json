{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "(.*):(\\d+):(\\d+): error TS(\\d+): (.*)",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        }
      }
    },
    {
      "label": "build",
      "type": "shell", 
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "prisma:generate",
      "type": "shell",
      "command": "npx",
      "args": ["prisma", "generate"],
      "group": "build"
    },
    {
      "label": "prisma:migrate",
      "type": "shell",
      "command": "npx", 
      "args": ["prisma", "migrate", "dev"],
      "group": "build"
    },
    {
      "label": "prisma:studio",
      "type": "shell",
      "command": "npx",
      "args": ["prisma", "studio"],
      "group": "build",
      "isBackground": true
    }
  ]
}
